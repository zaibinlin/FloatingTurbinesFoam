scale   1;

vertices        
(
    ( $xmin $ymin $zmin ) //0
    ( $xmax $ymin $zmin ) //1
    ( $xmin $ymax $zmin ) //2
    ( $xmax $ymax $zmin ) //3
    ( $xmin $ymin $zmax ) //4
    ( $xmax $ymin $zmax ) //5
    ( $xmin $ymax $zmax ) //6
    ( $xmax $ymax $zmax ) //7
    
);


blocks
(   
    hex (0 1 3 2 4 5 7 6) ($x_mesh $y_mesh $z_mesh)  
    simpleGrading  (
          1 //( (0.157  0.375  0.55) (0.2  0.25  1) (0.4  0.375  1.8) ) 
          1 //( (0.4  0.375  0.55) (0.2  0.25  1) (0.4  0.375  1.8) ) 
          //( (0.7  0.2  1) (0.1  0.15  0.125) (0.1  0.5  1) (0.1  0.15  8) ) 
          ( 
          	 (0.1801212   0.22  1)  
         	 (0.016     0.025  1) 
         	 (0.012     0.025  1)
         	 (0.008     0.025  1) //WL + 0.004  (4m)
         	 (0.012     0.025  1) 
         	 (0.016     0.025  1) 
         	 (0.020     0.025  1) 
         	 (0.735878  0.63  1)  
          ) 
    )   
);

