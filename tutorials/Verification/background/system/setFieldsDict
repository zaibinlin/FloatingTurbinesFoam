FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
#include "../../myVars" 
#include "$FOAM_CASE/0/include/boundaryConditions"

defaultFieldValues
(
    volScalarFieldValue  alpha.water 0
    volScalarFieldValue  zoneID      0
    //volScalarFieldValue porosityIndex 0
);

regions
(
    
    boxToCell
    {
        box (-10000 -10000 -10000) (10000 10000 0);
        fieldValues (
              volScalarFieldValue alpha.water 1
                    );
    }

   boxToCell
    {
        box (-10000 -10000 $ZWL) (10000 10000 100000);
        fieldValues (      
             volScalarFieldValue k     $k_air  
             volScalarFieldValue omega $omega_air
             volScalarFieldValue epsilon    $epsilon_air
             volScalarFieldValue nut   $nut_air
                    );
    }

    boxToCell
    {
        box (-10000 -10000  -10000) (10000 10000 $ZWL);
        fieldValues (      
             volScalarFieldValue k      $k_water
             volScalarFieldValue omega  $omega_water
             volScalarFieldValue epsilon    $epsilon_water
             volScalarFieldValue nut    $nut_water
                     );
    }
    cellToCell
    {
        set c0;
        fieldValues (
              volScalarFieldValue  zoneID  0
                    );
    }
    cellToCell
    {
        set c1;
        fieldValues (
              volScalarFieldValue  zoneID  1
                    );
    }
    
    
    
